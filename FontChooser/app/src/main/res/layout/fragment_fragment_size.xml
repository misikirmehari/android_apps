<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.misikirmehari.FontChooser.Fragment_Size">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="match_parent"
        android:translationY="25dp"
        android:background="@drawable/shapes"

        android:id="@+id/size_frag_text"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="71dp"
        android:layout_height="wrap_content" />


    <EditText
        android:layout_width="161dp"
        android:layout_height="122dp"
        android:inputType="number"
        android:ems="10"
        android:hint="Input size in sp"
        android:id="@+id/font_size_txt"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/size_frag_text"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_height="wrap_content"
        android:layout_weight="0.60"
        android:text="Submit"
        android:id = "@+id/submit_button"
        android:layout_width="150dp"
        android:background="@drawable/shapesbuttons"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/font_size_txt"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
